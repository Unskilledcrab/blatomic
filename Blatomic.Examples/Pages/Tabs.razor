@page "/tabs"
@inject ITheme Theme

<PageTitle>Tabs</PageTitle>

<div class="leading-relaxed @TwColors.Text_Slate_600">
    <h1 class="text-2xl font-bold @TwColors.Text_Slate_900">Tabs</h1>

    <h3 class="text-xl font-bold mt-6 @TwColors.Text_Slate_900">What's so special?</h3>

    <p class="my-2 font-medium">
        Alerts are small components that contain the ability to be dismissable. If you set the alert to dismissable
        then the user will essentially remove that element from the page when they dismiss it.
    </p>

    <div class="w-52 mb-2">
        <ThemeSelector @bind-SelectedPalette="selectedPalette" />
    </div>

    <div class="mb-2">

        <TabContext PaletteHeader="Theme.Danger">
            <Tab>
                <HeaderContent>
                    <div class="text-center">
                        I am a tab 1
                    </div>
                </HeaderContent>
                <ChildContent>
                    <div class="p-4">
                        I am a tab 1
                    </div>
                </ChildContent>
            </Tab>
            <Tab>
                <HeaderContent>
                    <div class="text-center">
                        I am a tab 2
                    </div>
                </HeaderContent>
                <ChildContent>
                    <div class="p-4">
                        I am a tab 2
                    </div>
                </ChildContent>
            </Tab>
            <Tab>
                <HeaderContent>
                    <div class="text-center">
                        I am a tab 3
                    </div>
                </HeaderContent>
                <ChildContent>
                    <div class="p-4">
                        I am a tab 3
                    </div>
                </ChildContent>
            </Tab>
        </TabContext>

    </div>

    <CodeBlock Title=".razor" Code="@defaultExample" />
</div>


@code {
    private Palette? selectedPalette;

    private string defaultExample => string.Format(@"@inject ITheme Theme
<Alert IsDismissable=""true"" {0}>
    Lorem ipsum ...
</Alert>",selectedPalette.GetPaletteCode(Theme));
}
