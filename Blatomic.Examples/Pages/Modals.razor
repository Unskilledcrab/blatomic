@page "/modals"
@inject ITheme Theme

<Button HoverStyle="HoverStyle.Shadow"
        RoundedStyle="RoundedStyle.Full"
        OnClickedAsync="() => isShowingSmall = true">
    Open Modal Small
</Button>

<Modal @bind-IsShowing="@isShowingSmall" Size="ModalSize.Small">
    <Body>
        <form class="px-6 pb-4 space-y-6 lg:px-8 sm:pb-6 xl:pb-8" action="#">
            <h3 class="text-xl font-medium">Sign in to our platform</h3>
            <div>
                <label for="email" class="block mb-2 text-sm font-medium">Your email</label>
                <input type="email" name="email" id="email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="name@company.com" required>
            </div>
            <div>
                <label for="password" class="block mb-2 text-sm font-medium">Your password</label>
                <input type="password" name="password" id="password" placeholder="••••••••" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" required>
            </div>
            <div class="flex justify-between">
                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        <input id="remember" aria-describedby="remember" type="checkbox" class="w-4 h-4 bg-gray-50 rounded border border-gray-300 focus:ring-3 focus:ring-blue-300" required>
                    </div>
                    <div class="ml-3 text-sm">
                        <label for="remember" class="font-medium">Remember me</label>
                    </div>
                </div>
                <a href="#" class="text-sm @TwColors.Text_Blue_600 hover:underline ">Lost Password?</a>
            </div>
            <button type="submit" class="w-full @Theme.Primary focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Login to your account</button>
            <div class="text-sm font-medium">
                Not registered? <a href="#" class="@TwColors.Text_Blue_600 hover:underline">Create account</a>
            </div>

            <Button OnClickedAsync="UpdateTheme">Update Primary Theme</Button>
            <Button OnClickedAsync="ResetTheme">Reset Primary Theme</Button>
        </form>
    </Body>
</Modal>

<Button HoverStyle="HoverStyle.Shadow"
        RoundedStyle="RoundedStyle.Full"
        OnClickedAsync="() => isShowingMedium = true">
    Open Modal Medium
</Button>

<Modal @bind-IsShowing="@isShowingMedium" Size="ModalSize.Medium">
    <Header>
        Header
    </Header>
    <Body>
        Body
    </Body>
    <Footer>
        Footer
    </Footer>
</Modal>

<Button HoverStyle="HoverStyle.Shadow"
        RoundedStyle="RoundedStyle.Full"
        OnClickedAsync="() => isShowingFull = true">
    Open Modal Full
</Button>


<Modal @bind-IsShowing="@isShowingFull" Size="ModalSize.Full">
    <Header>
        Header
    </Header>
    <Body>
        Body
    </Body>
</Modal>

@code {
    private bool isShowingSmall = false;
    private bool isShowingMedium = false;
    private bool isShowingFull = false;

    private void UpdateTheme()
    {
        Theme.Primary = new TwTheme().Info;
    }
    private void ResetTheme()
    {
        Theme.Primary = new TwTheme().Primary;
    }
}
