@page "/selects"
@inject ITheme Theme

<PageTitle>Selects</PageTitle>

<div class="leading-relaxed @TwColors.Text_Slate_600">
    <h1 class="text-2xl font-bold @TwColors.Text_Slate_900">Selects</h1>

    <h3 class="text-xl font-bold mt-6 @TwColors.Text_Slate_900">What's so special?</h3>

    <p class="my-2 font-medium">
        Our selection boxes are completely customizable and give you the freedom to place templates in to display
        you items however you chose. Here we are using the multi-select feature to allow the user to select
        multiple items. Then we can take those select items and display them however we would like.
    </p>
    
    <div class="mb-2 @Theme.Dark.All">
        <Example1 />
    </div>

    <CodeBlock Title=".razor" Code="@example1" />
</div>


@code {
    private string example1 = @"<Select TData=""int?"" Items=""@numbers"" IsMultiSelect=""true"">
    <PlaceHolderTemplate>
        <p class=""px-4"">Select...</p>
    </PlaceHolderTemplate>
    <SelectedItemsTemplate Context=""Items"">
        <div class=""flex -space-x-2"">
            @foreach (var item in Items)
            {
                <div class=""h-10 w-10 border-2 border-white rounded-full bg-green-300 text-black flex justify-center items-center"">
                    @item
                </div>
            }
        </div>
    </SelectedItemsTemplate>
    <ItemTemplate Context=""Item"">
        <p class=""px-4"">#@Item</p>
    </ItemTemplate>
</Select>

@code {
    private int?[] numbers = new int?[] { 1, 2, 3, 4, 5 };
}";
}
