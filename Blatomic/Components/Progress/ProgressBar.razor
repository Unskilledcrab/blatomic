<div class="w-full h-fit bg-gray-200 rounded-full">
    <div class="transition-[width] min-h-[1.5rem] h-fit flex justify-center items-center rounded-full @DefaultStyle" style="width: @width">
        @if (percentage != 0)
        {
            @ChildContent
        }
    </div>
</div>

@code {
    private string width => $"{percentage}%";
    private int percentage = 0;
    [Parameter]
    public int Percentage
    {
        get => percentage;
        set
        {
            if (value < 0)
            {
                percentage = 0;
                PercentageChanged.InvokeAsync(percentage);
            }
            if (value > 100)
            {
                percentage = 100;
                PercentageChanged.InvokeAsync(percentage);
            }
            else
            {
                percentage = value;
            }
        }
    }    
    [Parameter]
    public EventCallback<int> PercentageChanged { get; set; }

    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string DefaultStyle { get; set; } = "bg-blue-600 text-white";
}
