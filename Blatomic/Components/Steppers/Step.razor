@code {
    [CascadingParameter] Stepper? Stepper { get; set; }

    [Parameter] public string Title { get; set; } = string.Empty;

    private bool isStepComplete = true;
    [Parameter]
    public bool IsStepComplete
    {
        get { return isStepComplete; }
        set
        {
            if (isStepComplete != value)
            {
                isStepComplete = value;
                Stepper?.Refresh();
            }
        }
    }

    [Parameter] public RenderFragment? ChildContent { get; set; }

    protected override void OnInitialized()
    {
        Stepper?.AddStep(this);
        base.OnInitialized();
    }
}
